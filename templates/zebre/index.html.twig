				<img class="imgProjet" src="/img/p7.jpeg" alt="">
				<img class="imgProjet" src="/img/p8.jpeg" alt="">
			</div>
		</div>
		<div>
			<div class="glassmorphisme containerTitle">
				<h2>Contact</h2>
			</div>
			<div class="containerCardContact">
				
                {{form(formulaire)}}

			</div>
            

		</div>
	</div>
</div>
<footer>
	<div class="footer">
		<img class="img_footer" src="/img/Logo Joffrine VF Couleur.jpg" alt="">
		<p class="Adress">Adresse:120 Route de Paris<br>76240 LE MENESNIL ESNARD<br></p>
		<div class="liens">
			<button class="btn"><i class="fa-brands fa-facebook"></i></button>
			<button class="btn">Instagram</button>
			<button class="btn">twitter</button>
			<button class="btn">Linked</button>
		</div>
	</div>

		<script>
			constburger=document.querySelector(
				'header nav #burger');
			constnavList=document.querySelector(
				'header nav ul')

			burger.addEventListener(
				'click', ()
				=>{
					if(
						window.innerWidth<700)
					{
						navList.classList.add(
							'navMobile');
					}
				}
			);
			navList.addEventListener(
				'click', ()
				=>{
					if(
						window.innerWidth<700)
					{
						navList.classList.remove(
							'navMobile');
					}
				}
			);
		</script>
	{% endblock %}

