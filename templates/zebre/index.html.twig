{% extends 'base.html.twig' %}

{% block title %}Hello ZebreController!
{% endblock %}

{% block body %}
<style>
		.backgroundZebre {
			background-image: url('/img/fond_zébre.jpg');
			background-repeat: no-repeat;
			background-size: cover;
		}

		body {
			font-family: palatino, sans-serif;
		}
		/* header */
		.header {
			position: relative;
			padding: 1rem;
			display: flex;
			justify-content: space-between;
			background-color: black;
		}
		.navbar {
			color: white;
			align-items: center;
			justify-content: space-between;
		}

		nav #burger {
			width: 48px;
		}

		nav ul {
			width: 70%;
			display: none;
		}

		nav ul li {
			list-style: none;
			text-transform: uppercase;
			font-size: 5rem;
			cursor: pointer;
		}

		nav ul li:last-child {
			background-color: red;
			padding: 0.5em 1rem;
			border-radius: 50px;
			width: fit-content;
		}

		.navMobile {
			position: absolute;
			right: 0;
			top: 0;
			display: flex;
			flex-direction: column;
			gap: 1rem;
			width: 50vw;
			background: black;
			padding: 1rem;
			border-radius: 10px;
			align-items: end;
		}


		.img_logo {
			width: 100px;
			height: 100px;
			border-radius: 50%;
		}


		.glassmorphisme {
			backdrop-filter: blur(15px) saturate(14%);
			-webkit-backdrop-filter: blur(15px) saturate(14%);
			background-color: rgba(255, 255, 255, 0.69);
			border-radius: 12px;
			border: 1px solid rgba(255, 255, 255, 0.125);
		}


		.containerCard {
			margin-left: 5%;
			margin-right: 5%;
			padding: 5rem;
			margin-top: 5%;
			border-radius: 20px;

		}

		.containerTitle {
			margin-left: auto;
			margin-right: auto;
			margin-top: 2rem;
			padding: 0.5rem;
			width: 30%;
			background-color: white;
			text-align: center;
		}
		.containerTitle h2 {
			font-size: 60px;
		}
		.containerArticle {
			marging: 2rem;
			padding: 5rem;

		}
		.img {
			border: 15px solid black;
			border-radius: 8px;
			width: 350px;
			height: 400px;
			margin-left: auto;
			margin-right: auto;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 3rem;
		}

		/*PRIX*/
		.pPrix {
			text-align: center;
			font-weight: bold;
			font-size: large;
		}

		.imgPrix2 {
			border: 20px solid black;
			border-radius: 8px;
			width: 450px;
			height: 250px;
			margin-left: auto;
			margin-right: auto;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 3rem;

		}

		/*PROJETS*/
		.containerCardProjet {
			align-items: center;
			justify-content: center;
			margin: 3rem;

		}
		.imgProjet {
			border-radius: 20px;
			width: 400px;
			height: 500px;
		}

		/*CONTACT*/

		.containerCardContact {
			background-color: white;
			border-radius: 10px;
			margin: 3rem;
			padding: 5rem;
			text-align:center;
		}

		input,
		label,
		textarea {
			display: flex;
			margin: 1rem 2rem;
			font: 1rem 'palatino', sans-serif;
			text-align:center;
		}

		/*FOOTER */
		.footer {
			background: white;
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 1rem;
		}
		.img_footer {
			width: 100px;
			height: 100px;
		}

		.Adress {
			font-weight: bold;
			font-size: large;
		}
		.btn {
			border-radius: 50%;
			height: 100px;
			width: 100px;
			margin: 0.3rem;

		}


		/* media queries */
		@media(min-width: 700px) {
			header nav ul {
				display: flex;
				gap: 2rem;
				align-items: center;
				justify-content: flex-end;
			}

			header nav #burger {
				display: none;
			}

</style>
